
choice
    depends on NMC1XXX_WIFI_MODULE
    prompt "Wi-Fi chipset type"
    default NMC1000_WIFI_CHIP

	config NMC1000_WIFI_CHIP
	    bool "NMC1000 without bluetooth"
	config NMC1100_WIFI_CHIP
	    bool "NMC1100 with bluetooth"

endchoice

choice
    depends on NMC1XXX_WIFI_MODULE
    prompt "Wi-Fi bus type"
    default NMC1XXX_USE_SDIO
    
	config NMC1XXX_USE_SDIO_BUS
	    bool "communication by SDIO"
#	    depends on AM_WIFI_SD_MMC || SD_MMC && SDIO
	config NMC1XXX_USE_SPI_BUS
	    bool "communication by SPI"
endchoice

choice
    depends on NMC1XXX_WIFI_MODULE
    prompt "NMC1000 Wi-Fi Driver Version"
    default NMC1XXX_SPI_722_VERSION

	config NMC1XXX_SPI_722_VERSION
		bool "Select the Realese 7.22 Driver for NMC1000 "
	config NMC1XXX_SPI_930_VERSION
		bool "Select the Realese 9.30 Driver for NMC1000 "
	config NMC1XXX_SPI_722_FREQUENCY_TEST_VERSION
		bool "Select the FREQUENCY TEST 7.22 Driver for NMC1000 "
	config NMC1XXX_936_VERSION
	    bool "Select NMC1000 9.36 Version"
	config NMC1XXX_936_JOHNNY_VERSION
	    bool "Select NMC1000 9.36 Version from Johnny."
	config NMC1XXX_937_JOHNNY_VERSION
	    bool "Select NMC1000 9.37 Version from Johnny."
endchoice



config SDIO_HARD_IRQ
        depends on NMC1XXX_WIFI_MODULE && NMC1XXX_USE_SDIO
        bool "SDIO HARD IRQ"
        default n
        ---help---
          hard irq wake up polling process

